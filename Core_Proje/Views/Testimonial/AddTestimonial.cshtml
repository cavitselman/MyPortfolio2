@model Core_Proje.EL.Concrete.Testimonial

@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="AddTestimonial">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Referans Ekleme Paneli</h4>
                <div class="form-group">
                    <label>Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="@Model.ClientName" />
                </div>
                <div class="form-group">
                    <label>Şirket</label>
                    <input type="text" class="form-control" asp-for="@Model.Company" />
                </div>
                <div class="form-group">
                    <label>Görsel Url</label>
                    <input type="text" class="form-control" asp-for="@Model.ImageUrl" />
                </div>
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" asp-for="@Model.Title" />
                </div>
                <div class="form-group">
                    <label>Yorum</label>
                    <textarea class="form-control" asp-for="@Model.Comment" rows="6"></textarea>
                </div>
                <br />
                <button class="btn btn-info">Kaydet</button>
                <a class="btn btn-dark" href="/Testimonial/Index/">İptal</a>
            </div>
        </div>
    </div>
</form>